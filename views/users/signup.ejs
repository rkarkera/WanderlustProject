<% layout('/layouts/boilerplate.ejs') -%>
<body>
  <div class="row mt-3">
    <div class="col-6 offset-2">
      <h3>WanderLust SignUp</h3>
      <form
        method="POST"
        action="/user/signup"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-5">
          <label for="username" class="form-label">Enter Username</label>
          <input
            type="text"
            id="username"
            name="username"
            class="form-control"
            minlength="6"
            required
          />
          <div class="invalid-feedback">
            username length should be greater than 6 character
          </div>
        </div>

        <div class="mb-3 mt-3">
          <label for="password" class="form-label">Enter password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
            required
          />
          <div class="invalid-feedback">
            <p>Must contain at least 1 digit</p>
            <p>1 uppercase and lowercase letter</p>
            <p>Minimum 8 or more characters</p>
          </div>
        </div>
        <div class="mb-3 mt-2">
          <input type="checkbox" onclick="myFunction()" />
          <i class="check">Show Password</i>
        </div>
        <div class="mb-3 mt-3">
          <label for="email" class="form-label">Enter Email</label>
          <input
            type="text"
            id="email"
            name="email"
            class="form-control"
            minlength="6"
            required
          />
          <div class="invalid-feedback">Enter Email</div>
        </div>

        <button class="btn btn-dark new-btn">SignUp</button>
      </form>
    </div>
  </div>
  <script src="js/signup.js"></script>
</body>
