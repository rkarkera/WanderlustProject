<% layout('/layouts/boilerplate.ejs') -%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create Listing</h3>
      <form
        method="POST"
        action="/"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label class="form-label">Title</label>
          <input
            type="text"
            placeholder="Enter Title"
            name="listing[title]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter Title</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Description</label
          ><textarea
            name="listing[description]"
            placeholder="Enter description"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Enter short description</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Upload Image</label>
          <input
            type="file"
            placeholder="Enter url"
            name="listing[image]"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label class="form-label" for="category">Category</label>
          <select
            class="form-select form-select-sm"
            aria-label="Small select example"
            id="category"
            name="listing[category]"
            required
          >
            <option value="">-Select Category-</option>
            <option value="trending">Trending</option>
            <option value="rooms">Rooms</option>
            <option value="iconic-cities">Iconic Cities</option>
            <option value="mountains">Mountains</option>
            <option value="castles">Castles</option>
            <option value="amazing-pools">Amazing Pools</option>
            <option value="camping">Camping</option>
            <option value="farms">Farms</option>
            <option value="arctic">Arctic</option>
          </select>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label class="form-label">Price</label>
            <input
              type="Number"
              placeholder="Enter Price"
              name="listing[price]"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter Price</div>
          </div>

          <div class="mb-3 col-md-8">
            <label class="form-label">Location</label>
            <input
              type="text"
              placeholder="Enter location"
              name="listing[location]"
              class="form-control"
              required
            />
          </div>
          <div class="invalid-feedback">Enter Location</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Country</label
          ><input
            type="text"
            placeholder="Enter country"
            name="listing[country]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter Country</div>
        </div>

        <button class="btn btn-dark new-btn mb-3">Add</button>
      </form>
    </div>
  </div>
</body>
